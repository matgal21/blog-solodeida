---
import Navbar from "./Navbar.astro";
---
<style>
  h2 {
    font-family: Impact, "Bebas Neue", sans-serif;
    font-size: 3rem;
  }
  h2:hover {
    scale: 1.1;
  }

  .mi-imagen {
    width: 125px; /* Size for desktop */
  }

  @media (max-width: 600px) {
    .mi-imagen {
      width: 150px; /* Size for mobile devices */
    }
    h2 {
      font-size: 2.7rem;
      font-family: "Bebas Neue", sans-serif;
      font-weight: 800;
      word-spacing: 5px;
      align-content: center;
      align-self: center;
      align-items: center;
      text-align: center;
    }
  }

  @media (max-width: 360px) {
    .mi-imagen {
      width: 100px; /* Size for mobile devices */
    }
    h2 {
      font-size: 1.5rem;
      font-family: "Bebas Neue", sans-serif;
    }
  }

</style>

<link rel="icon" type="image" href="/img/logos solo de ida/logo azul1.png" />
<head>

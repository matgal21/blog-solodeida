---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
    <link rel="icon" type="image" href="/img/logos solo de ida/logo azul1.png" />
    <meta name="keywords" content="Blog, Viajes, Turismo, Blog de viajes, Blogger">

    <!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-Z70LX1R9TK"></script>
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4044408479447590"
    crossorigin="anonymous"></script>
  </head>
  <body
    class="mx-auto w-full"
  >
    <Header />
    <Navbar />
    <div class="mx-auto w-full flex mt-8 min-h-screen max-w-6xl flex-col px-4 dark:prose-invert sm:px-6 lg:px-8 dark:bg-neutral-900">
      <slot />
    </div>
    <Footer />
  </body>
</html>


---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";

const { title, description, cover } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} cover={cover} />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="keywords" content="Blog, Viajes, Turismo, Blog de viajes, Blogger, Solo de ida">
    <meta name="author" content="Solo de ida">
  
    
  <!-- Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-Z70LX1R9TK"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-Z70LX1R9TK');
</script>
  </head>
  <body
    class="mx-auto w-full "
    >
    <Header />
    <Navbar />
    <div class="mx-auto  w-full flex mt-8 min-h-screen max-w-6xl flex-col px-4 dark:prose-invert sm:px-6 lg:px-8 dark:bg-neutral-900">
      <slot />
    </div>
    <Footer />
  </body>
</html>

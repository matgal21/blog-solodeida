---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
    <meta name="keywords" content="Blog, Viajes, Turismo, Blog de viajes, Blogger">

    <!-- Google tag (gtag.js) -->
  </head>
  <body class="bg-blue-900 text-white antialiased">
    <!-- Header -->
    <Header />
    
    <!-- Contenedor principal -->
    <main class="flex flex-col items-center justify-center mx-auto min-h-screen max-w-6xl px-4 sm:px-6 lg:px-8">
      <section class="w-full py-2">
        <slot />
      </section>
    </main>
    

  </body>
  
  <Footer />
</html>


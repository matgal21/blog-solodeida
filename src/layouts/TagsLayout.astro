---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import { GoogleAnalytics } from '@next/third-parties/google'

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
    <GoogleAnalytics gaId="G-Z70LX1R9TK" />
    <link rel="icon" type="image" href="/img/logos solo de ida/logo azul1.png" />
    <meta name="keywords" content="Blog, Viajes, Turismo, Blog de viajes, Blogger">
  
  </head>
  <body>
    <Header />
    <Navbar />
    <div class="mx-auto flex min-h-screen max-w-6xl flex-col px-4 dark:prose-invert sm:px-6 lg:px-8 dark:bg-neutral-900">
      <slot />
    </div>
    <Footer />
  </body>
</html>

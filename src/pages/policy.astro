---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";

const title = `Politica de privacidad | solo de ida`;
const description = `Error 404`;
---

<BaseLayout title={title} description={description}>
  <main id="content">
    <div class="text-center py-10 px-4 sm:px-6 lg:px-8">
      <h2 class="block text-7xl font-bold text-gray-800 sm:text-9xl dark:text-white">Politica de privacidad del sitio</h2>
      <a href="/">
        <img src="/img/avioncaido.jpg" alt="avion caido" class="mt-4 rounded ">
      </a>
      <p class="mt-3 text-gray-600 dark:text-neutral-400">Cookies y data</p>
      <p class="text-gray-600 dark:text-neutral-400">Lo que buscas no está disponible.</p>
      <div class="mt-5 flex flex-col justify-center items-center gap-2 sm:flex-row sm:gap-3">
        <a class="w-full sm:w-auto py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-sky-400 text-white hover:bg-sky-800 disabled:opacity-50 disabled:pointer-events-none" href="/">
          <Icon name="tabler:chevron-left" class="icon-base" />
          Volver al menú
        </a>
      </div>
    </div>
  </main>
</BaseLayout>